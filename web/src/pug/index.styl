:root
  --font-head: Lato, sans-serif
  --font-head-weight: 700
  --font-body: Lato, sans-serif
  --font-body-weight: 300

.w-960 { width: 960px }
@media (max-width: 960px)
  .w-960.rwd { width: 100%; padding: 1em }

html,body
  margin: 0
  padding: 0
  width: 100%
  height: 100%
  font-family: Lato, 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 18px

b, em { font-weight: 700; font-style: normal }
.btn-theme-default { background: rgb(44,62,80); color: #fff }
.btn-theme-gray { background: rgb(149,165,166); color: #fff }
.btn-theme-green { background: rgb(24,188,156); color: #fff }

#widget
  width: 100%
  height: 100%
#layout
  position: absolute
  top: 0
  left: 20%
  width: 60%
  margin: 4% 0 
  height: 68%
  @media (max-width: 768px)
    width: 80%
    left: 10%
  @media (max-width: 480px)
    left: 0
    width: 100%
    height: 80%
    margin: 0
    padding-bottom: 30px
    .btn
      border-radius: 0
      float: right

#main
  background: #eee
  width: 100%
  height: 400px
  position: relative
  z-index: index($order, main)
  border-radius: 5px
  overflow: hidden
  box-shadow: 0 2px 2px rgba(0,0,0,0.5)
  @media (max-width: 480px)
    border-radius: 0
    box-shadow: none

